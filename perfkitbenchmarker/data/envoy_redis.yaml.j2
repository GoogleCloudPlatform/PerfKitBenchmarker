static_resources:
  listeners:
  - name: listener_primary
    address:
      socket_address:
        address: 0.0.0.0
        port_number: 6379
    filter_chains:
    - filters:
      - name: envoy.filters.network.tcp_proxy
        typed_config:
          "@type": type.googleapis.com/envoy.extensions.filters.network.tcp_proxy.v3.TcpProxy
          stat_prefix: redis_primary
          cluster: cluster_primary

  - name: listener_replica
    address:
      socket_address:
        address: 0.0.0.0
        port_number: 6380
    filter_chains:
    - filters:
      - name: envoy.filters.network.tcp_proxy
        typed_config:
          "@type": type.googleapis.com/envoy.extensions.filters.network.tcp_proxy.v3.TcpProxy
          stat_prefix: redis_replica
          cluster: cluster_replica

  clusters:
  - name: cluster_primary
    connect_timeout: 0.25s
    type: STATIC
    lb_policy: ROUND_ROBIN
    load_assignment:
      cluster_name: cluster_primary
      endpoints:
      - lb_endpoints:
        - endpoint:
            address:
              socket_address:
                address: {{ primary_ip }}
                port_number: 6379

  - name: cluster_replica
    connect_timeout: 0.25s
    type: STATIC
    lb_policy: ROUND_ROBIN
    load_assignment:
      cluster_name: cluster_replica
      endpoints:
      - lb_endpoints:
        - endpoint:
            address:
              socket_address:
                address: {{ replica_ip }}
                port_number: 6379
