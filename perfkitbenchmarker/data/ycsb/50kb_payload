# Yahoo! Cloud System Benchmark
#   This is a workload where each payload is 50kb in size (10 * 5000).
#   Read/update ratio: 50/50
#   Request distribution: zipfian

workload=com.yahoo.ycsb.workloads.CoreWorkload

readallfields=true
operationcount=1000

fieldlength = 5000
fieldcount = 10

readproportion=0.5
updateproportion=0.5
scanproportion=0
insertproportion=0

requestdistribution=zipfian

